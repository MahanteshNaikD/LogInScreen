<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    android:layout_height="match_parent"
    tools:context=".LoginModule.logInScreen">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_logo_view"
            android:background="@color/primaryColor"
            android:layout_height="300dp"
            android:src="@drawable/brigosha"/>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:src="@drawable/ic_email"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/userOremailEditText"
                android:layout_height="match_parent"
                android:hint="UserName or Email"
                android:background="@drawable/edittext_shape"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:inputType="text"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:src="@drawable/ic_password"/>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"

            android:layout_height="match_parent">



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/passwordEditText"
                android:layout_height="match_parent"
                android:hint="Password"
                android:layout_marginStart="30dp"
                android:background="@drawable/edittext_shape"
                android:padding="5dp"
                android:inputType="textVisiblePassword"/>

        </com.google.android.material.textfield.TextInputLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/forgor_password"
        android:textStyle="normal"
        android:textIsSelectable="false"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="270dp"
        />

<androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:id="@+id/buttob_login"
    android:layout_marginEnd="30dp"
    android:text="LOGIN"
    android:textColor="@color/text_feild_white"
    android:background="@drawable/button_rectangle"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginStart="170dp"
        android:text="Login with"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="50dp"
            android:id="@+id/faceBook_logIn"
            android:src="@drawable/facebook_icon"
            android:scaleType="fitXY"
            android:backgroundTint="@color/text_feild_white"
            android:layout_height="50dp"
            />


        <ImageButton
            android:layout_width="50dp"
            android:id="@+id/google_logIn"
            android:src="@drawable/google_icon"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:backgroundTint="@color/text_feild_white"
            android:layout_marginStart="30dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/whatsapp_logIn"
            android:src="@drawable/whatsapp_icon"
            android:scaleType="fitXY"
            android:backgroundTint="@color/text_feild_white"
            android:layout_marginStart="30dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:id="@+id/google_plus_logIn"
            android:src="@drawable/google_plus_icon"
            android:scaleType="fitXY"
            android:backgroundTint="@color/text_feild_white"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            />


    </LinearLayout>
    


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Don't have Account  "
            />

      <TextView
          android:layout_width="wrap_content"
          android:id="@+id/signup_button_text"
          android:layout_height="wrap_content"
          android:text="SingUp"
          android:textColor="@color/black"
          android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>